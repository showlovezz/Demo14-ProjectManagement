<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="project-center mt-5">
          <div class="card">
            <div class="card-header">
              <h2 class="og inline"><%= @project.title %></h2>
              <%= link_to 'Back to index', projects_path, class: "badge badge-info inline" %>
            </div>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p class="lead"><%= @project.description %></p>
                <hr>
                <%= render @project.tasks %>
                <%= render "tasks/form2" %>
              </blockquote>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>